{
	"version": "2.0.0",
	"presentation": {
		"reveal": "always",
		"panel": "new"
	},
	"tasks": [
		{
			"taskName": "cargo build",
			"type": "shell",
			"command": "cargo",
			"args": [
				"build"
			],
			"problemMatcher": "$rustc"
		},
		{
			"taskName": "cargo run",
			"type": "shell",
			"command": "cargo",
			"args": [
				"run"
			],
			"group": "build",
			"problemMatcher": "$rustc"
		},
		{
			"taskName": "cargo test",
			"type": "shell",
			"command": "cargo",
			"args": [
				"test"
			],
			"group": "test",
			"problemMatcher": "$rustc"
		},
		{
			"taskName": "cargo clean",
			"type": "shell",
			"command": "cargo",
			"args": [
				"clean"
			]
		},
		{
			"taskName": "cargo check",
			"type": "shell",
			"command": "cargo",
			"args": [
				"check"
			],
			"problemMatcher": "$rustc"
		}
	]
}